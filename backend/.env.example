# Claude AI Provider Configuration
# Set AI_PROVIDER to "claude" to use Claude API, or "mock" for development/testing
AI_PROVIDER=mock

# Claude API Key (required when AI_PROVIDER=claude)
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your-api-key-here

# AI Model (optional, defaults to claude-3-5-sonnet-20241022)
# AI_MODEL=claude-3-5-sonnet-20241022

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/conflict_manager
DB_USER=dev_user
DB_PASSWORD=dev_password

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_ISSUER=confresolv
JWT_AUDIENCE=all
JWT_REALM=main
