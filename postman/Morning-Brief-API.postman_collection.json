	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-attach token to all authenticated requests",
					"if (pm.collectionVariables.get('accessToken')) {",
					"    pm.request.headers.add({",
					"        key: 'Authorization',",
					"        value: 'Bearer ' + pm.collectionVariables.get('accessToken')",
					"    });",
					"}"
				]
			}
		}
